<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_listkampanye_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lk1">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_listkampanye_judul"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="100dp"
                android:fontFamily="Roboto"

                android:text="#KebakaranHutan - ReGrow Hutan Kalimantan Timur"
                android:textAlignment="textStart"
                android:textColor="#555555"
                android:textSize="10sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/list_listkampanye_lokasi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:fontFamily="Roboto"

                android:text="Pecinta Alam Kaltim"
                android:textAlignment="textStart"
                android:textColor="#555555"
                android:textSize="8sp">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="Roboto"
                    android:text="Terkumpul"
                    android:textColor="#979797"
                    android:textAlignment="textStart"
                    android:textSize="8sp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="Roboto"
                    android:gravity="left"
                    android:text="Sisa hari"
                    android:textAlignment="textEnd"
                    android:textColor="#555555"
                    android:textSize="8sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_listkampanye_danaterkumpul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="Roboto"
                    android:text="Rp 150.000.089"
                    android:textColor="#555555"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="10sp">
                </TextView>

                <TextView
                    android:id="@+id/item_listkampanye_sisahari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="Roboto"
                    android:gravity="left"
                    android:text="40"
                    android:textAlignment="textEnd"
                    android:textColor="#555555"
                    android:textSize="10sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:outlineAmbientShadowColor="#639D4C"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="Berhasil"
                    android:textAlignment="center"
                    android:textColor="#639D4C"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#BCBEC0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>