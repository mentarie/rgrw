<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="23dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="23dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_pemberitahuan_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_komunitas" />

    <TextView
        android:id="@+id/item_pemberitahuan_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:fontFamily="Roboto"
        android:text="Pecinta Alam Kaltim mengirim post. 11 jam"
        android:textColor="#555555"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/item_pemberitahuan_imgdesc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:src="@drawable/logo_komunitas" />

</LinearLayout>
